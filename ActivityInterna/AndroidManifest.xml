<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cristiano.activityinterna"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SomaActivity"
            android:label="@string/title_activity_soma" >
        </activity>
        <activity
            android:name=".ConverterActivity"
            android:label="@string/title_activity_converter" >
        </activity>
        <activity
            android:name=".VisualizarActivity"
            android:label="@string/title_activity_visualizar" >
        </activity>
    </application>

</manifest>
